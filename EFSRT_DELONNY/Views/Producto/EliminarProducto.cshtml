@model Dominio.Entidad.Negocio.Entidad.Producto

@{
    ViewBag.Title = "Eliminar Producto";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.x.x/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Estilos_Eliminar.css" rel="stylesheet" />
}

<div class="container mt-5 mb-5 confirm-delete-container">
    <h2 class="confirm-delete-title text-danger mb-4">Eliminar Producto</h2>

    <div class="alert alert-warning confirm-delete-alert shadow-sm">
        <h4 class="alert-heading">¿Estás seguro de que deseas eliminar este producto?</h4>
        <p>Esta acción no se puede deshacer.</p>
    </div>
    




    <div class="card confirm-delete-card shadow-lg border-0">
        <div class="card-body">
            <h5 class="card-title mb-3">¿Estás seguro de que deseas eliminar este producto?</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">Código</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.codigo)</dd>

                <dt class="col-sm-4">Nombre</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.nombre)</dd>

                <dt class="col-sm-4">Categoría</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.codCategoria)</dd>

                <dt class="col-sm-4">Stock</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.stock)</dd>

                <dt class="col-sm-4">Precio</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.precio)</dd>

                <dt class="col-sm-4">Descripción</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.descripcion)</dd>

                <dt class="col-sm-4">Proveedor</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.codProveedor)</dd>

                <dt class="col-sm-4">Foto</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.foto)</dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="d-flex gap-3 justify-content-center mt-4">
                    <input type="submit" value="Eliminar" class="btn btn-danger btn-delete" />
                    @Html.ActionLink("Volver al listado", "MantLstProductos", null, new { @class = "btn btn-secondary btn-cancel" })
                </div>
            }
        </div>
    </div>
</div>
