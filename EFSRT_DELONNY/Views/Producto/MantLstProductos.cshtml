@model IEnumerable<Dominio.Entidad.Negocio.Entidad.Producto>

@{
    ViewBag.Title = "Lista de Productos";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">Lista de Productos</h2>

    <div class="card mb-4 shadow-sm border-0">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Categoría</label>
                    @Html.DropDownList("categoria", (SelectList)ViewBag.Categorias, "Seleccione", new { @class = "form-select" })
                </div>

                <div class="col-md-4">
                    <label class="form-label">Nombre</label>
                    @Html.TextBox("nombre", Request["nombre"], new { @class = "form-control", placeholder = "Escribe el producto" })
                </div>

                <div class="col-md-4 align-self-end">
                    <button type="submit" class="btn btn-primary w-100">
                        Consultar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="mb-3">
        @Html.ActionLink("Registrar Producto", "CrearProducto", null, new { @class = "btn btn-success" })
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().codigo)</th>
                    <th>@Html.DisplayNameFor(model => model.First().nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.First().codCategoria)</th>
                    <th>@Html.DisplayNameFor(model => model.First().stock)</th>
                    <th>@Html.DisplayNameFor(model => model.First().precio)</th>
                    <th>@Html.DisplayNameFor(model => model.First().descripcion)</th>
                    <th>@Html.DisplayNameFor(model => model.First().codProveedor)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.codigo)</td>
                        <td>@Html.DisplayFor(modelItem => item.nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.codCategoria)</td>
                        <td>@Html.DisplayFor(modelItem => item.stock)</td>
                        <td>@Html.DisplayFor(modelItem => item.precio)</td>
                        <td>@Html.DisplayFor(modelItem => item.descripcion)</td>
                        <td>@Html.DisplayFor(modelItem => item.codProveedor)</td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a href="@Url.Action("ActualizarProducto", new { id = item.codigo })" class="btn btn-outline-primary d-flex align-items-center gap-1">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>
                                <a href="@Url.Action("DetallesProducto", new { id = item.codigo })" class="btn btn-outline-info d-flex align-items-center gap-1">
                                    <i class="bi bi-eye"></i> Ver
                                </a>
                                <a href="@Url.Action("EliminarProducto", new { id = item.codigo })" class="btn btn-outline-danger d-flex align-items-center gap-1">
                                    <i class="bi bi-trash"></i> Eliminar
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
