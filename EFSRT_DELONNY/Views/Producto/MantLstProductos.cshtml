@model IEnumerable<Dominio.Entidad.Negocio.Entidad.Producto>

@{
    ViewBag.Title = "MantLstProductos";
}

<h2>MantLstProductos</h2>

<form>
    <label>Categoria</label>
    @Html.DropDownList("categoria", (SelectList)ViewBag.Categorias,
            "Seleccione", new { @class = "form-control" })

    <label>Nombre: </label>
    @Html.TextBox("nombre", "", new { @class = "form-control", placeholder = "Escribe el producto" })

    <button class="btn btn-warning">Consultar</button>
</form>

<p>
    @Html.ActionLink("Registrar Producto", "CrearProducto")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.codCategoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.stock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.codProveedor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.codCategoria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.stock)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.precio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.codProveedor)
        </td>
        <td>
            @Html.ActionLink("Editar", "ActualizarProducto", new { id = item.codigo }) |
            @Html.ActionLink("Ver", "DetallesProducto", new { id = item.codigo }) |
            @Html.ActionLink("Eliminar", "EliminarProducto", new { id = item.codigo })
        </td>
    </tr>
}

</table>
