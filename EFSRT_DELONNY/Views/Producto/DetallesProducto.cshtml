@model Dominio.Entidad.Negocio.Entidad.Producto

@{
    ViewBag.Title = "Detalles del Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="~/Content/Estilos_General.css" rel="stylesheet" />
    <link href="~/Content/Estilos_Detalles.css" rel="stylesheet" />
}

<div class="container">
    <h2 class="titulo-principal"><i class="bi bi-box-seam me-2"></i>Detalles del Producto</h2>

    <div class="card-base" role="region" aria-labelledby="productoInfoLabel">
        <div class="card-header-detalle" id="productoInfoLabel">
            <i class="bi bi-info-circle"></i> Información del Producto
        </div>
        <div class="card-body-detalle">
            <dl class="row">
                <dt class="col-sm-4">Código</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.codigo)</dd>

                <dt class="col-sm-4">Nombre</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.nombre)</dd>

                <dt class="col-sm-4">Categoría</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.codCategoria)</dd>

                <dt class="col-sm-4">Stock</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.stock)</dd>

                <dt class="col-sm-4">Precio</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.precio)</dd>

                <dt class="col-sm-4">Descripción</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.descripcion)</dd>

                <dt class="col-sm-4">Proveedor</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.codProveedor)</dd>

                <dt class="col-sm-4">Foto</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.foto)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex gap-3 flex-wrap justify-content-center justify-content-md-start">
        @Html.ActionLink("Editar", "ActualizarProducto", new { id = Model.codigo }, new { @class = "btn btn-outline-primary btn-custom" })
        @Html.ActionLink("Volver al listado", "MantLstProductos", null, new { @class = "btn btn-secondary btn-custom" })
    </div>
</div>