@model Dominio.Entidad.Negocio.Entidad.Proveedor

@{
    ViewBag.Title = "Crear Proveedor";
}

@section Styles {
    <link href="~/Content/Estilos_Generales.css" rel="stylesheet" />
    <link href="~/Content/Estilos_Crear.css" rel="stylesheet" />
}

<div class="container mt-5 mb-5">
    <h2 class="text-center titulo-formulario mb-4">🏢 Registrar Nuevo Proveedor</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-body p-5">
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger animate__animated animate__fadeIn" })

                <div class="row g-4">
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.codigo, new { @class = "form-label" })
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-upc-scan"></i></span>
                            @Html.EditorFor(m => m.codigo, new { htmlAttributes = new { @class = "form-control", placeholder = "Código del proveedor" } })
                        </div>
                        @Html.ValidationMessageFor(m => m.codigo, "", new { @class = "text-danger small mt-1" })
                    </div>

                    <div class="col-md-6">
                        @Html.LabelFor(m => m.nombre, new { @class = "form-label" })
                        @Html.EditorFor(m => m.nombre, new { htmlAttributes = new { @class = "form-control", placeholder = "Nombre del proveedor" } })
                        @Html.ValidationMessageFor(m => m.nombre, "", new { @class = "text-danger small mt-1" })
                    </div>

                    <div class="col-md-6">
                        @Html.LabelFor(m => m.codDistrito, new { @class = "form-label" })
                        @Html.DropDownList("codDistrito", (SelectList)ViewBag.Distrito, "Seleccione distrito", new { @class = "form-select" })
                        @Html.ValidationMessageFor(m => m.codDistrito, "", new { @class = "text-danger small mt-1" })
                    </div>

                    <div class="col-md-6">
                        @Html.LabelFor(m => m.fono, new { @class = "form-label" })
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                            @Html.EditorFor(m => m.fono, new { htmlAttributes = new { @class = "form-control", placeholder = "Teléfono" } })
                        </div>
                        @Html.ValidationMessageFor(m => m.fono, "", new { @class = "text-danger small mt-1" })
                    </div>
                </div>

                <div class="d-flex justify-content-center gap-4 mt-5">
                    <button type="submit" class="btn btn-success btn-custom shadow-sm">✅ Crear</button>
                    @Html.ActionLink("↩ Volver a Mantenimiento Proveedor", "MantLstProveedor", null, new { @class = "btn btn-outline-secondary btn-custom shadow-sm" })
                </div>
            </div>
        </div>
    }

    @if (ViewBag.mensaje != null)
    {
        <div class="alert alert-info mt-4 text-center fw-semibold animate__animated animate__fadeIn">
            @ViewBag.mensaje
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

