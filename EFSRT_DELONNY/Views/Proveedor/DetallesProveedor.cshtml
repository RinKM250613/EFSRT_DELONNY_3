@model Dominio.Entidad.Negocio.Entidad.Proveedor

@{
    ViewBag.Title = "Detalles del Proveedor";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Asegúrate que se use el layout
}

@section Styles {
    <link href="~/Content/Estilos_General.css" rel="stylesheet" />
    <link href="~/Content/Estilos_Detalles.css" rel="stylesheet" />
}

<div class="container">
    <h2 class="titulo-principal"><i class="bi bi-truck me-2"></i>Detalles del Proveedor</h2>

    <div class="card-base" role="region" aria-labelledby="proveedorInfoLabel">
        <div class="card-header-detalle" id="proveedorInfoLabel">
            <i class="bi bi-person-badge-fill"></i> Información del Proveedor
        </div>
        <div class="card-body-detalle">
            <dl class="row">
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.codigo)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.codigo)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ruc)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ruc)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.nombre)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.nombre)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.codDistrito)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.codDistrito)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.fono)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.fono)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex gap-3 flex-wrap justify-content-center justify-content-md-start">
        @Html.ActionLink("Actualizar", "ActualizarProveedor", new { id = Model.codigo }, new { @class = "btn btn-outline-primary btn-custom" })
        @Html.ActionLink("Volver al listado", "MantLstProveedor", null, new { @class = "btn btn-secondary btn-custom" })
    </div>
</div>