@model Dominio.Entidad.Negocio.Entidad.Proveedor

@{
    ViewBag.Title = "Detalles Proveedor";
}

<div class="container mt-4">
    <h2 class="mb-4">Detalles del Proveedor</h2>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h4 class="card-title mb-3">Información del Proveedor</h4>
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.codigo)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.codigo)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.nombre)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.nombre)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.codDistrito)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.codDistrito)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.fono)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.fono)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3 d-flex gap-2">
        @Html.ActionLink("Actualizar", "ActualizarProveedor", new { id = Model.codigo }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Volver a Mantenimiento Proveedor", "MantLstProveedor", null, new { @class = "btn btn-secondary" })
    </div>
</div>
