@model Dominio.Entidad.Negocio.Entidad.Proveedor

@{
    ViewBag.Title = "Eliminar Proveedor";
}

@section Styles {
    <link href="~/Content/Estilos_Eliminar.css" rel="stylesheet" />
}

<div class="container mt-5 mb-5 confirm-delete-container">
    <h2 class="confirm-delete-title text-danger mb-4">Eliminar Proveedor</h2>

    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-success confirm-delete-alert shadow-sm">@TempData["mensaje"]</div>
    }

    <div class="alert alert-warning confirm-delete-alert shadow-sm">
        <strong>¿Estás seguro que deseas eliminar este proveedor?</strong>
    </div>

    <div class="card confirm-delete-card shadow-lg border-0 mb-5">
        <div class="card-body">
            <h4 class="card-title mb-3">Datos del Proveedor</h4>
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.codigo)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.codigo)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ruc)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ruc)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.nombre)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.nombre)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.codDistrito)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.codDistrito)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.fono)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.fono)</dd>
            </dl>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="d-flex gap-3 justify-content-center">
            <input type="submit" value="Eliminar" class="btn btn-danger btn-delete" />
            @Html.ActionLink("Cancelar y volver", "MantLstProveedor", null, new { @class = "btn btn-secondary btn-cancel" })
        </div>
    }
</div>