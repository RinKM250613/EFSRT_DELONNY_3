@model Dominio.Entidad.Negocio.Entidad.Proveedor

@{
    ViewBag.Title = "Actualizar Proveedor";
}

<div class="container mt-4">
    <h2 class="mb-4">Actualizar Proveedor</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h4 class="mb-3">Proveedor</h4>
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                <div class="mb-3">
                    @Html.LabelFor(model => model.codigo, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.codigo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.codigo, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.codDistrito, htmlAttributes: new { @class = "form-label" })
                    @Html.DropDownList("codDistrito", (SelectList)ViewBag.Distrito, "Seleccione", new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.codDistrito, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.fono, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.fono, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.fono, "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    }

    <div class="mt-3">
        @Html.ActionLink("Volver a Mantenimiento Proveedor", "MantLstProveedor", null, new { @class = "btn btn-secondary" })
    </div>

    @if (ViewBag.mensaje != null)
    {
        <div class="alert alert-info mt-3">@ViewBag.mensaje</div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
