@model IEnumerable<Dominio.Entidad.Negocio.Entidad.Lista.PedidoLista>

@{
    ViewBag.Title = "ListaPedido";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">Lista de Pedidos</h2>

    <div class="card mb-4 shadow-sm border-0">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Fecha Generado</label>
                    <input type="date" name="fecha" class="form-control" value="@Request["fecha"]" />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Nombre</label>
                    @Html.TextBox("cliente", Request["cliente"], new { @class = "form-control", placeholder = "Escribe el cliente" })
                </div>

                <div class="col-md-4 align-self-end">
                    <button type="submit" class="btn btn-primary w-100">
                        Consultar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="mb-3">
        @Html.ActionLink("Registrar Pedido", "CrearPedido", null, new { @class = "btn btn-success" })
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.codPedido)</th>
                    <th>@Html.DisplayNameFor(model => model.nomCliente)</th>
                    <th>@Html.DisplayNameFor(model => model.nomEmpleado)</th>
                    <th>@Html.DisplayNameFor(model => model.fecPedido)</th>
                    <th>@Html.DisplayNameFor(model => model.fecEnvio)</th>
                    <th>@Html.DisplayNameFor(model => model.estadoEnvio)</th>
                    <th>@Html.DisplayNameFor(model => model.cantidad)</th>
                    <th>@Html.DisplayNameFor(model => model.direccionDestino)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.codPedido)</td>
                        <td>@Html.DisplayFor(modelItem => item.nomCliente)</td>
                        <td>@Html.DisplayFor(modelItem => item.nomEmpleado)</td>
                        <td>@Html.DisplayFor(modelItem => item.fecPedido)</td>
                        <td>@Html.DisplayFor(modelItem => item.fecEnvio)</td>
                        <td>@Html.DisplayFor(modelItem => item.estadoEnvio)</td>
                        <td>@Html.DisplayFor(modelItem => item.cantidad)</td>
                        <td>@Html.DisplayFor(modelItem => item.direccionDestino)</td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a href="@Url.Action("ActualizarPedido", new { id = item.codPedido })" class="btn btn-outline-primary d-flex align-items-center gap-1">
                                    <i class="bi bi-pencil-square"></i> Actualizar
                                </a>
                                <a href="@Url.Action("DetallesPedido", new { id = item.codPedido })" class="btn btn-outline-info d-flex align-items-center gap-1">
                                    <i class="bi bi-info-circle"></i> Detalles
                                </a>
                                <a href="@Url.Action("EliminarPedido", new { id = item.codPedido })" class="btn btn-outline-danger d-flex align-items-center gap-1">
                                    <i class="bi bi-trash"></i> Eliminar
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
