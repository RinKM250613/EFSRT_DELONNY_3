@model Dominio.Entidad.Negocio.Entidad.Pedido

@{
    ViewBag.Title = "Detalles del Pedido";
}

<div class="container mt-4">
    <h2 class="text-info mb-3">Detalles del Pedido</h2>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <strong>Información del Pedido</strong>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.codPedido)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.codPedido)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.codCliente)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.codCliente)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.codEmpleado)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.codEmpleado)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.fecPedido)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.fecPedido)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.fecEntrega)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.fecEntrega)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.fecEnvio)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.fecEnvio)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.estadoEnvio)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.estadoEnvio)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.cantidad)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.cantidad)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.destino)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.destino)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.direccionDestino)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.direccionDestino)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ciudadDestino)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ciudadDestino)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex gap-2">
        @Html.ActionLink("Actualizar", "ActualizarPedido", new { id = Model.codPedido }, new { @class = "btn btn-outline-primary" })
        @Html.ActionLink("Volver al Listado", "ListaPedido", null, new { @class = "btn btn-secondary" })
    </div>
</div>
